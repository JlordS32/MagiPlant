.my-progress-bar {
    background-color: transparent;
    border: 2px solid rgb(85, 85, 85);
    height: 20px;
    border-radius: 4px;
    padding: 0;
}

.my-progress-bar__progress {
    background-color: rgb(76, 175, 80);
    border-radius: 4px 0 0 4px;
}

.my-progress-bar__text {
    color: white;
    unity-font-style: bold;
}

.dialog {
    position: absolute;
    left: 50%;
    top: 50%;
    translate: -50% -50%;
    width: 50%;
    background-image: url("project://database/Assets/Sprites/UI/02_Paper_Theme/Sprites/UI_Paper_Frame_01_Standard.png?fileID=2800000&guid=194b5bbfc8c9f5244abbe31f69ff7b1c&type=3#UI_Paper_Frame_01_Standard");
    height: 500px;
    padding-top: 100px;
    padding-right: 100px;
    padding-bottom: 100px;
    padding-left: 100px;
}

.title {
    font-size: 50px;
    -unity-text-align: upper-center;
}

.font {
    -unity-font-definition: url("project://database/Assets/Fonts/Minecraftia-Regular.ttf?fileID=12800000&guid=dd91240ca23e7bc48a7441cd07ef9aa1&type=3#Minecraftia-Regular");
}

.backdrop {
    background-color: rgba(0, 0, 0, 0.25);
}

.wrapper {
    flex-direction: row;
}
